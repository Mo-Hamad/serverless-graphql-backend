{
  "name": "serverless_graphql_aws",
  "version": "1.0.0",
  "description": "Serverless GraphQL API that will use AWS",
  "main": "index.ts",
  "type": "module",
  "scripts": {
    "compile": "tsc",
    "start": "npm run compile && node ./dist/server.js",
    "test": "vitest",
    "serverless": "npm run compile && serverless invoke local -f graphql -p query.json",
    "serverless:deploy": "npm run compile && serverless dev"
  },
  "repository": {
    "type": "tsc",
    "url": "git+https://github.com/Mo-Hamad/Serverless_GraphQL_AWS.git"
  },
  "author": "Mo-Hamad",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Mo-Hamad/Serverless_GraphQL_AWS/issues"
  },
  "homepage": "https://github.com/Mo-Hamad/Serverless_GraphQL_AWS#readme",
  "dependencies": {
    "@apollo/server": "^4.11.3",
    "@as-integrations/aws-lambda": "^3.1.0",
    "aws-sdk": "^2.1692.0",
    "dotenv": "^16.4.7",
    "graphql": "^16.10.0"
  },
  "devDependencies": {
    "@types/node": "^22.13.10",
    "eslint": "^9.22.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.5.3",
    "serverless": "^4.8.0",
    "serverless-offline": "^14.4.0",
    "typescript": "^5.8.2",
    "vitest": "^3.0.8"
  }
